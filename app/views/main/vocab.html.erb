<div class="page-header">
  <h1 class="hover-jp">
    <span data-en='My Vocabulary' data-jp='私の単語'></span>
  </h1>
</div>

<% if @words %>
  <div class="row">
    <% @words.each do |word| %>
      <div class="col-lg-3">
        <div class="panel panel-default">
          <div class="panel-body text-center">
            <h3 class="jp hover-en">
              <span data-jp='<%= word[0][:jp] %>' data-en='<%= word[0][:def] %>'></span>
            </h3>
            <p class="jp"><%= word[0][:reading] %></p>
            <p><%= word[0][:pos] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
