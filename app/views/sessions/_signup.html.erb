<div id="signup" tabindex="-1" role="dialog" aria-labelledby="signupLabel" class="modal fade">
  <div role="document" class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-hidden="true" class="close">&times;</button>
        <h3 id="signupLabel" class="modal-title hover-jp"><span data-en="Sign Up" data-jp="アカウント登録"></span></h3>
      </div>
      <div class="modal-body">
        <form class="form-horizontal" method="post" action="/users/new">
          <fieldset>
            <div class="form-group">
              <label for="email" class="col-md-3 control-label hover-jp"><span data-en="Email" data-jp="メールアドレス"></span></label>
              <div class="col-md-8">
                <input id="signupEmail" placeholder="Email" type="text" class="form-control" name='user[email]'>
              </div>
            </div>
            <div class="form-group">
              <label for="password" class="col-md-3 control-label hover-jp"><span data-en="Password" data-jp="パスワード"></span></label>
              <div class="col-md-8">
                <input id="signupPassword" placeholder="Password" type="password" class="form-control" name='user[password]'>
              </div>
            </div>
            <div class="form-group">
              <label for="passwordConfirm" class="col-md-3 control-label hover-jp"><span data-en="Confirm Password" data-jp="パスワードを再入力"></span></label>
              <div class="col-md-8">
                <input id="signupPasswordConfirm" placeholder="Confirm Password" type="password" class="form-control" name='user[password_confirmation]'>
              </div>
            </div>
          </fieldset>
      </div>
      <div class="modal-footer">
        <div class="form-group">
          <button type="button" data-dismiss="modal" class="btn btn-default hover-jp"><span data-en="Close" data-jp="キャンセル"></span></button>
          <button type="submit" class="btn btn-primary hover-jp"> <span data-en="Sign Up" data-jp="アカウント登録"></span></button>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>
